#!/bin/sh
echo "üöÄ Running pre-push checks..."

# Check for bypass flag
if [ "$SKIP_HOOKS" = "1" ] || [ "$BYPASS_PUSH_PROTECTION" = "1" ]; then
  echo "‚ö†Ô∏è Bypassing pre-push protection (BYPASS_PUSH_PROTECTION=1)"
  exit 0
fi

echo "üîç Running monorepo lint checks..."
pnpm lint
LINT_EXIT_CODE=$?
if [ $LINT_EXIT_CODE -ne 0 ]; then
  echo "‚ùå Lint checks failed. Please fix the issues before pushing."
  exit $LINT_EXIT_CODE
fi

echo "üîç Running monorepo type checks..."
pnpm typecheck
TYPECHECK_EXIT_CODE=$?
if [ $TYPECHECK_EXIT_CODE -ne 0 ]; then
  echo "‚ùå TypeScript type checking failed. Please fix the issues before pushing."
  exit $TYPECHECK_EXIT_CODE
fi

# Prevent pushing to main/master directly
current_branch=$(git symbolic-ref HEAD | sed -e 's,.*/\(.*\),\1,')
if [ "$current_branch" = "main" ] || [ "$current_branch" = "master" ]; then
  echo "‚ùå Direct push to $current_branch is not allowed. Use a feature branch."
  echo "üí° To bypass: BYPASS_PUSH_PROTECTION=1 git push"
  exit 1
fi

echo "‚úÖ Pre-push checks passed!"
